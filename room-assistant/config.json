{
  "name": "room-assistant",
  "version": "1.0.0-alpha",
  "slug": "room-assistant",
  "description": "room-assistant tracks presence and more on a room level",
  "url": "https://github.com/mKeRix/room-assistant",
  "startup": "application",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "image": "mkerix/room-assistant-{arch}",
  "boot": "auto",
  "host_network": true,
  "options": {
    "services": [],
    "room": "default-room",
    "mqtt": {
      "url": "mqtt://localhost",
      "username": "",
      "password": "",
      "rejectUnauthorized": true
    },
    "ble": {
      "channel": "room_presence",
      "useAddress": false,
      "whitelist": [],
      "maxDistance": 0,
      "updateFrequency": 0,
      "processIBeacon": true,
      "onlyIBeacon": false,
      "majorMask": "0xFFFF",
      "minorMask": "0xFFFF"
    },
    "gpio": [],
    "shell": []
  },
  "schema": false
}
